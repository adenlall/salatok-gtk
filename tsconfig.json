{
    "compilerOptions": {
        "experimentalDecorators": true,
        "strict": true,
        "paths": {
            "*": [
                "*",
                "types/*",
                "gi-types/*"
            ]
        },
        "target": "ES2018",
        "baseUrl": ".",
        "moduleResolution": "node",
        "module": "ES2020",
        "outDir": "_build",
        "lib": [
            "es2017"
        ],
        "skipLibCheck": true,
        "typeRoots": [
            "types",
            "gi-types"
        ],
    },
    "include": [
        "gi-types/gi.d.ts",
        "types/ambient.d.ts",
        "src/*",
    ],
    "exclude": [
        "node_modules/@types/**"
    ],
}